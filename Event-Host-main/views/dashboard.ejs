<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="row container-fluid justify-content-center">
      <div class="col-lg-6 justify-content-center">
        <h1 class="text">Add Event</h1>

        <form action="/dashboard" method="post" class="form1" autocomplete="off">
          <label for="firstName" class="form-label">Event ID</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="eventid"
          />

          <label for="firstName" class="form-label">Event Name</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="eventname"
          />
          <label for="firstName" class="form-label">Event Date(yyyy-mm-dd)</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="eventdate"
          />
          <label for="firstName" class="form-label">Start Time</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="starttime"
          />
          <label for="firstName" class="form-label">End Time</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="endtime"
          />
          <label for="firstName" class="form-label">Payment ID</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="paymentid"
          />
          <label for="firstName" class="form-label">Capacity</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="capacity"
          />
            <button type="submit" class="btn btn-success loginbtn">Add</button>
          </div>
        </form>
      </div>
    </div>

    <div class="row container-fluid justify-content-center">
      <div class="col-lg-6 justify-content-center">
        <h1>Manage Events</h1>
    <table class="table">
      <thead>
        <tr>
 
          <th scope="col">Event ID</th>
          <th scope="col">Delete</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i=0; i<results.length;i++){%>
        <tr>
     
          <td><%=results[i].Event_Id%></td>
          <td><a href="/delete/<%=results[i].Event_Id%>">Delete</a></td>
          <td><a href="/edit/<%=results[i].Event_Id%>">Edit</a></td>
        </tr>
        <%}%>
      </tbody>
    </table>
    </div>
    </div>
    <div class="row container-fluid justify-content-center">
      <div class="col-lg-6 justify-content-center">
        <h1>Ticket Queue</h1>
    <table class="table">
      <thead>
        <tr>
 
          <th scope="col">Event ID</th>
          <th scope="col">User Name</th>
          <th scope="col">Transaction ID</th>
        </tr>
      </thead>
      <tbody>
        <% for (var j=0; j<result.length;j++){%>
        <tr>
     
          <td><%=result[j].Event_Id%></td>
          <td><%=result[j].User_Id%></td>
          <td><%=result[j].Transaction_Id%></td>
        </tr>
        <%}%>
      </tbody>
    </table>
    </div>
    </div>

    <div class="row container-fluid justify-content-center">
      <div class="col-lg-6 justify-content-center">
        <h1 class="text">Confirm tickets</h1>

        <form action="/tickets" method="post" class="form1" autocomplete="off">
          <label for="firstName" class="form-label">Event ID</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="eventid"
          />

          <label for="firstName" class="form-label">User Name</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="username"
          />
          <label for="firstName" class="form-label">Seat Number</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="seatnumber"
          />
          <label for="firstName" class="form-label">Status</label>
          <input
            type="text"
            class="form-control input"
            id="firstName"
            placeholder=""
            value=""
            required=""
            name="status"
          />
          <button type="submit" class="btn btn-success loginbtn">Confirm/Reject</button>
          </form>
          </div>
          </div>

  </body>
</html>
